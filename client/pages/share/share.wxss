/* pages/share/share.wxss */

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  height: 300rpx;
}

.userinfo_name {
  padding-bottom: 80rpx;
}

.section {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
  padding-left: 50rpx;
  background: #fff;
}

.section__title {
  padding-right: 30rpx;
}

.section_input {
  border-bottom: 1px solid #a5f;
}

.sw {
  width: 100%;
  height: 150rpx;
}

.switch {
  float: right;
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
  padding-right: 100rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 80rpx;
  border-radius: 50%;
}

.button {
  height: 90rpx;
  width: 40%;
  background-color: #a5f;
  opacity: 0.7;
  color: white;
}

.btnhover {
  background-color: #f6f6f6;
  border-style: solid;
  border-color: #a5f;
  border-width: 1px;
  border-radius: 5px;
  color: #a5f;
}

.cold1 {
  position: fixed;
  top: 70rpx;
  left: -200rpx;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  animation: mymove1 15s linear infinite;
}

@keyframes mymove1 {
  from {
    left: -200rpx;
  }

  to {
    left: 750rpx;
  }
}


/* pages/Main/Main.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  padding-top: 30rpx;
  height: 600rpx;
}

.wifiClose {
  color: red;
  font-size: 1.8rem;
}

.wifiOpen {
  color: green;
  font-size: 1.8rem;
}

.oneLine {
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
}

.foot {
  padding-top: 10rpx;
  font-size: 0.65rem;
  color: #888;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.btng {
  margin: 0rpx 100rpx 0rpx 100rpx;
  background-color: #a5f;
  opacity: 0.7;
  color: white;
}

.btnhover {
  background-color: #f6f6f6;
  border-style: solid;
  border-color: #a5f;
  border-width: 1px;
  border-radius: 5px;
  color: #a5f;
}

.slide-image {
  width: 100%;
  height: 150;
}

.canvas {
  margin-top: 10rpx;
  /* border: 1px solid; */
  height: 350rpx;
  width: 200px;
